<style>
  body{display:flex;justify-content:center;align-items:center;height:100vh;font-family:Arial,Helvetica,sans-serif}
  .card{background:#fff;border:1px solid #ddd;border-radius:8px;padding:2rem;text-align:center;box-shadow:0 4px 10px rgba(0,0,0,.1)}
  .card img{width:100px;height:100px;border-radius:50%;object-fit:cover;margin-bottom:1rem}
  #toggleBtn{padding:.6rem 1.2rem;border:none;border-radius:4px;font-size:1rem;cursor:pointer;transition:background .25s}
  .add     {background:#1976d2;color:#fff}
  .added   {background:#388e3c;color:#fff}
</style>
