<body>

<div class="card">
  <img src="https://i.pravatar.cc/200?u=jslab" alt="avatar">
  <h3>Jane Doe</h3>
  <button id="toggleBtn" class="add">Add Friend</button>
</div>

<script>
const btn = document.getElementById('toggleBtn');
btn.addEventListener('click', () => {
  if (btn.classList.contains('add')) {          // currently “Add Friend”
    btn.textContent = 'Friend Added';
    btn.classList.replace('add', 'added');
  } else {                                      // currently “Friend Added”
    btn.textContent = 'Add Friend';
    btn.classList.replace('added', 'add');
  }
});
</script>
</body>
