  .card{background:#fff;border:1px solid #ddd;border-radius:6px;padding:1rem;width:160px;box-shadow:0 2px 4px rgba(0,0,0,.08);margin:.5rem;display:inline-block;vertical-align:top}
  .globalBtn{background:#1976d2;color:#fff;border:none;padding:.5rem 1rem;border-radius:4px;cursor:pointer;font-size:1rem;margin:.2rem}
