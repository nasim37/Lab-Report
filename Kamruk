<h2>1. Add a new row to a table</h2>
<table id="myTable">
  <thead><tr><th>#</th><th>Name</th></tr></thead>
  <tbody>
    <tr><td>1</td><td>Alice</td></tr>
    <tr><td>2</td><td>Bob</td></tr>
  </tbody>
</table><br>
<button class="globalBtn" onclick="addRow()">+ Add Row</button>

<h2>2. Create an unordered list and add new list items</h2>
<ul id="dynamicList"></ul>
<button class="globalBtn" onclick="addItem()">+ Add Item</button>

<h2>3. Apply the same class to all list items</h2>
<p>(Every new item above already gets class "sameClass".)</p>

<h2>4. Create multiple cards using a loop and apply the same class to all</h2>
<button class="globalBtn" onclick="makeCards()">Generate 4 Cards</button>
<div id="cardContainer"></div>

<h2>5. Make all buttons of your website look the same</h2>
<p>Every button on this page uses the class <code>globalBtn</code> â€” change the CSS once, update every button.</p>

<script>
/* 1. Add row */
let rowCounter = 2;
function addRow(){
  rowCounter++;
  const tbody = document.querySelector('#myTable tbody');
  const tr = document.createElement('tr');
  tr.innerHTML = `<td>${rowCounter}</td><td>Player ${rowCounter}</td>`;
  tbody.appendChild(tr);
}

/* 2 & 3. Add list item with class */
let itemCounter = 0;
function addItem(){
  itemCounter++;
  const li = document.createElement('li');
  li.textContent = `Task ${itemCounter}`;
  li.className = 'sameClass';          // same class applied
  document.getElementById('dynamicList').appendChild(li);
}

/* 4. Generate cards with loop */
function makeCards(){
  const container = document.getElementById('cardContainer');
  container.innerHTML = '';            // clear previous
  for(let i=1;i<=4;i++){
    const div = document.createElement('div');
    div.className = 'card';            // same class
    div.innerHTML = `<h4>Card ${i}</h4><p>Quick description here.</p>`;
    container.appendChild(div);
  }
}
</script>
